{
  "compilerOptions": {
    "target": "es2022",                // Выбираем последнюю поддерживаемую версию ECMAScript
    "module": "commonjs",              // Модульная система CommonJS
    "outDir": "./dist",                // Папка для скомпилированных файлов
    "rootDir": "./",                   // Папка с исходными TypeScript файлами
    "strict": true,                    // Включает все строгие проверки
    "esModuleInterop": true,           // Поддержка ES6 модулей
    "skipLibCheck": true,              // Пропустить проверку типов в библиотеках
    "forceConsistentCasingInFileNames": true, // Принудительное соблюдение регистра в именах файлов
    "sourceMap": true,                 // Генерация исходных карт для отладки
    "resolveJsonModule": true,         // Разрешение импорта JSON файлов
    "noImplicitAny": true,             // Запрет неявного типа "any"
    "noImplicitThis": true,            // Запрет неявного типа "this"
    "noUnusedLocals": true,            // Предупреждение о неиспользуемых локальных переменных
    "noUnusedParameters": true,        // Предупреждение о неиспользуемых параметрах функций
    "noFallthroughCasesInSwitch": true, // Запрет на "проваливание" в switch/case
    "moduleResolution": "node",        // Резолвер модулей Node.js
    "allowJs": true,                   // Разрешить обработку файлов JavaScript
    "isolatedModules": true,           // Включить изолированную обработку модулей
    "noEmit": true    ,                 // Отключить генерацию выходных файлов
    "baseUrl": ".",                    // Базовый URL для разрешения модулей
    "paths": {                         // Настройка алиасов для путей
      "@src/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@utils/*": ["src/utils/*"]
    },
    "experimentalDecorators": true,    // Поддержка экспериментальных декораторов
    "emitDecoratorMetadata": true,     // Эмиссия метаданных для декораторов
    "allowSyntheticDefaultImports": true, // Разрешение синтетических импортов по умолчанию
    "incremental": true,               // Инкрементальная компиляция для ускорения сборки
    "strictNullChecks": true,          // Строгая проверка на null
    "strictFunctionTypes": true,       // Строгая проверка типов функций
    "strictPropertyInitialization": true, // Строгая инициализация свойств в классах
    "noImplicitReturns": true,         // Запрет на неявные возвращения из функций
    "jsx": "react",                    // Поддержка JSX с использованием React
    "lib": [
      "es2022",
      "dom",
      "dom.iterable",
      "esnext"
    ],       // Библиотеки, используемые при компиляции
  },
  "include": ["CoursesJS/**/*"],       // Включить все TypeScript файлы в папке CoursesJS
  "exclude": ["node_modules", "dist"]  // Исключить папку node_modules и dist
}
